{% extends 'layouts/base.html.twig' %}

{% block title %}Register!{% endblock %}

{% block body %}
    <h1 class=" mt-5 mb-3 h3 text-center">Create an account</h1>
    <p class="mb-5 text-center text-muted">And enjoy buiding your own gallery!</p>

    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="form">
                {{ form_start(registrationForm) }}
                    <div class="row d-flex align-items-baseline">
                        <div class="col-md-6 ">
                            {{ form_row(registrationForm.firstName) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(registrationForm.lastName) }}
                        </div>
                    </div>
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Password'
                    }) }}
                    {{ form_row(registrationForm.agreeTerms) }}
                    <button type="submit" class="btn btn-primary btn-block btn-lg" formnovalidate>Register</button>
                    <p class="text-center mt-5 mb-3 text-muted">Already have an account? <a href="{{ path('app_login') }}">Please log in</a></p>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
