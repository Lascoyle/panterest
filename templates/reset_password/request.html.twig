{% extends 'layouts/base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1 class="mt-5 mb-4 h3 text-center">Reset your password</h1>

            <div class="mb-4 text-center text-muted">
                <p>
                    Enter your email address and we we will send you a
                    link to reset your password.
                </p>
            </div>

            {% for flashError in app.flashes('reset_password_error') %}
                <div class="alert alert-error mb-3 rounded" role="alert">{{ flashError }}</div>
            {% endfor %}

            {{ form_start(requestForm) }}
                {{ form_row(requestForm.email) }}

                <button type="submit" class="mt-4 btn btn-primary btn-block btn-lg">Send password reset email</button>
            {{ form_end(requestForm) }}
        </div>
    </div>
{% endblock %}